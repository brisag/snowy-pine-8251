<h1>All Flights</h1>
<% @flights.each do |flight| %>
<hr>
<section id="flight-<%=flight.id %>">

  <h2>Flight Number: <%= flight.number %></h2>
  <h2>Flight Number: <%= flight.airline.name %></h2>


  <h2>Passengers:</h2> <% flight.passengers.each do |passenger| %>
                      <section id="passenger-<%=passenger.id%>">
                        <h2><%= passenger.name %> <%= button_to "Remove Passenger", "/passengers/#{passenger.id}", method: :delete %></h2>

  </section>
  <% end %>
    </section>
<% end %>
